// The project related to the random insult generation
// Assign and array with strings 
var randomBodyParts = ['Face', 'Nose', 'Mouth','Hair','Teeth', 'Chin', 'Legs'];

// assign and array with string elements to the variable 'randomObjectives'
var randomObjectives = ['Smelly','Boring','Stupid', 'Nasty','Lazy','Nasty','Filthy'];

// assign and arrar with string elements to variable randomWords
var randomWords = ['Fly','Mammoth','Stick','Dog', 'Rat', 'Kangaroo','Spider','Cat'];

// Chose a random item from randomBodyParts array and assign it to randomBodyPart 
var randomBodyPart = randomBodyParts[Math.floor(Math.random() * 7)];

//chose a random item from randomObjectives array and assign to randomBodyPart
var randomObjective = randomObjectives[Math.floor(Math.random() * 7)];

// chose a random item from randomWords array and assign to randomWord 
var randomWord = randomWords[Math.floor(Math.random()* 8)]

console.log('Your ' + randomBodyPart + ' is like a ' +
 randomObjective + ' ' + randomWord + '!!! ');
 
